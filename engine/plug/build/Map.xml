<desc>
	<section id="Map">
		<function id="load_map" label="Karte laden">
			<text>Lade Karte ID=%map_id</text>
			<param id="map_id" label="Karten ID" type="id:map" default="1" />
			<return>cuina.map.GameMap</return>
		</function>
		
		<function id="createPanorama" label="Panorama erstellen">
			<text>Lade Karte ID=%map_id</text>
			<param id="id" label="Panorama ID" type="int" default="1">
				<filter>
					<range min="1" max="10" />
				</filter>
			</param>
			<param id="image" label="Grafik" type="string" default="1" />
			<param id="depth" label="Tiefe" type="int" default="0" />
			<param id="speedX" label="X-Bewegung" type="int" default="0" />
			<param id="speedY" label="Y-Bewegung" type="int" default="0" />
			<param id="zoomX" label="X-Zoom" type="int" default="0" />
			<param id="zoomY" label="Y-Zoom" type="int" default="0" />
			<param id="ox" label="X-Position" type="int" default="0" />
			<param id="oy" label="Y-Position" type="int" default="0" />
			<param id="alpha" label="Sichtbarkeit" type="float" default="1">
				<filter>
					<range min="0" max="1.0" />
				</filter>
			</param>
			<return>cuina.graphics.Panorama</return>
		</function>
	</section>
</desc>